{% for viewport in ['sm', 'md', 'lg'] %}
  <style>
    /**
     * Used to prevent margin collapse so that it is easier to test for `inline`
     * vs `inline-block`.
     */

    .u-{{- viewport -}}-nbfc {
      overflow: hidden;
    }

    .dev-Box {
      background: #ddd;
      margin-top: 10px;
    }

    /**
     * The `margin` is used to differentiate between `inline` and
     * `inline-block`, as `inline` elements will not apply the margin.
     */

    .dev-Inner {
      background: #ff0;
      margin: 10px 0;
    }
  </style>

  <div class="Test">
    <h1 class="Test-title">SUIT CSS: <a href="https://github.com/suitcss/utils-display">display utilities</a> tests</h1>

    <h2 class="Test-describe">.u-{{- viewport -}}-block</h2>
    <h3 class="Test-it">renders as block</h3>
    <div class="Test-run">
      <div class="dev-Box">
        <span class="u-{{- viewport -}}-block dev-Inner">
          This <code>span</code> should be <code>block</code>
        </span>
      </div>
    </div>

    <h2 class="Test-describe">.u-{{- viewport -}}-hidden</h2>
    <h3 class="Test-it">renders as hidden</h3>
    <div class="Test-run">
      <div class="dev-Box">
        <span class="u-{{- viewport -}}-hidden dev-Inner">
          This <code>span</code> should be hidden
        </span>
      </div>
    </div>

    <h2 class="Test-describe">.u-{{- viewport -}}-hiddenVisually</h2>
    <h3 class="Test-it">renders as visually hidden</h3>
    <div class="Test-run">
      <div class="dev-Box">
        <span class="u-{{- viewport -}}-hiddenVisually dev-Inner">
          This <code>span</code> should be read by screenreaders
        </span>
      </div>
    </div>

    <h2 class="Test-describe">.u-{{- viewport -}}-inline</h2>
    <h3 class="Test-it">renders as inline</h3>
    <div class="Test-run">
      <div class="dev-Box">
        <span class="u-{{- viewport -}}-inline dev-Inner">
          This <code>span</code> should be <code>inline</code>
        </span>
      </div>
    </div>

    <h2 class="Test-describe">.u-{{- viewport -}}-inlineBlock</h2>
    <h3 class="Test-it">renders as inline-block</h3>
    <div class="Test-run">
      <div class="dev-Box">
        <span class="u-{{- viewport -}}-inlineBlock dev-Inner">
          This <code>span</code> should be <code>inline-block</code>
        </span>
      </div>
    </div>
    <h3 class="Test-it">doesn't expand beyond its parent when containing wide children (test in Firefox)</h3>
    <div class="Test-run">
      <div class="dev-Box" style="width:200px">
        <div class="u-{{- viewport -}}-inlineBlock dev-Inner">
          <img src="http://lorempixel.com/300/300/sports/1" alt="" style="margin:10px 0; max-width:100%;">
        </div>
      </div>
    </div>

    <h2 class="Test-describe">.u-{{- viewport -}}-table, .u-{{- viewport -}}-tableCell, and .u-{{- viewport -}}-tableRow</h2>
    <h3 class="Test-it">render as tables</h3>
    <div class="Test-run">
      <div class="dev-Box">
        <div class="u-{{- viewport -}}-table dev-Inner">
          <div class="u-{{- viewport -}}-tableRow dev-Inner">
            <div class="u-{{- viewport -}}-tableCell dev-Inner">
              This <code>div</code> should be <code>table-cell</code> within <code>table</code>
            </div>
            <div class="u-{{- viewport -}}-tableCell dev-Inner">
              This <code>div</code> should be <code>table-cell</code> within <code>table</code>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
